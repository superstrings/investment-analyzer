# Investment Analyzer Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://localhost/investment_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=investment_db
DB_USER=your_username
DB_PASSWORD=your_password

# Futu OpenD Configuration (per user)
# Format: FUTU_PWD_{USERNAME}=password
FUTU_PWD_DYSON=your_trade_password_here

# Default Futu OpenD Connection
FUTU_OPEND_HOST=127.0.0.1
FUTU_OPEND_PORT=11111

# Proxy Configuration (if needed for akshare)
# HTTP_PROXY=http://127.0.0.1:7890
# HTTPS_PROXY=http://127.0.0.1:7890

# Application Settings
LOG_LEVEL=INFO
CHART_OUTPUT_DIR=charts/output
REPORT_OUTPUT_DIR=reports/output
